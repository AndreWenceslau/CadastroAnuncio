@model IEnumerable<CadastroAnuncio.Models.CadastroAnuncioModel>
@{
    ViewBag.Title = "Listar";
}
<table class="table">
    <tr>
        <th>
            Anúncio
        </th>
        <th>
            Cliente
        </th>
        <th>
            Início
        </th>
        <th>
            Término
        </th>
        <th>
            Valor Investido Dia
        </th>
        <th>
            Ação
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeAnuncio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataTermino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvestimentoDia)
            </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) 
                @Html.ActionLink("Apagar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<div class="text-right">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item" id="item-anterior-fornecedores">
                <a class="page-link" href="#" onclick="paginar(-1)">Anterior</a>
            </li>
            <li class="page-item" id="item-proximo-fornecedores">
                <a class="page-link" href="#" onclick="paginar(1)">Próximo</a>
            </li>
        </ul>
    </nav>
</div>



