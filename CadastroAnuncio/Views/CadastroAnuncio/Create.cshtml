@model CadastroAnuncio.Models.CadastroAnuncioModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>CadastroAnuncioModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label id="label-nome-anuncio" for="nome-Anuncio" mas>Nome do Anúncio<span class="text-danger">*</span></label>
                    @Html.EditorFor(model => model.NomeAnuncio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomeAnuncio, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label id="label-nome-anuncio" for="nome-Anuncio" mas>Nome do Cliente<span class="text-danger">*</span></label>
                    @Html.EditorFor(model => model.NomeCliente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomeCliente, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label id="label-nome-anuncio" for="nome-Anuncio" mas>Data do Início<span class="text-danger">*</span></label>
                    @Html.EditorFor(model => model.DataInicio, new { htmlAttributes = new { @class = "form-control", id="data-inicio" } })
                    @if (TempData["mensagemErroDataInicio"] != null)
                    {<div class="field-error"><div class="text-danger"> @TempData["mensagemErroDataInicio"]</div> </div>}
                    @Html.ValidationMessageFor(model => model.DataInicio, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label id="label-nome-anuncio" for="nome-Anuncio" mas>Data do Fim<span class="text-danger">*</span></label>
                    @Html.EditorFor(model => model.DataTermino, new {htmlAttributes = new { @class = "form-control", id = "data-termino" } } )
                    @if (TempData["mensagemErroDataFim"] != null)
                    {<div class="field-error"><div class="text-danger"> @TempData["mensagemErroDataFim"]</div> </div>}
                    @Html.ValidationMessageFor(model => model.DataTermino, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label id="label-nome-anuncio" for="nome-Anuncio" mas>Investimento Diário<span class="text-danger">*</span></label>
                    @Html.EditorFor(model => model.InvestimentoDia, new { htmlAttributes = new { @class = "form-control", id = "valor-investido" } })
                    @Html.ValidationMessageFor(model => model.InvestimentoDia, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group text-right">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
@section scripts {
    <script src="~/Scripts/jquery.mask.min.js"></script>
    <script src="~/Scripts/CadastroAnuncio/MaskCadastroAnuncio.js"></script>

}
